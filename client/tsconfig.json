{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": false,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "moduleResolution": "node",
        "allowJs": true,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "client/src/**/*",
    ]
}